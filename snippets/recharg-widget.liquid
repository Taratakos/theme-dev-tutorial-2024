
{% if product.handle == 'high-performance-energy-gummies-watermelon-mint' %}
  <style>
    .choose__flavor {
      display: none;
    }
  </style>
{% endif %}

<style>
  .recommended-products-wrapper .rc-container-wrapper {
    display: none;
  }
  .rc-container {
    margin-bottom: 0;
  }
  .rc-template__radio-group .rc-radio-group__options {
    border: 2px solid black;
    border-radius: 0;
  }

  .rc-radio.rc-option__onetime {
    border-bottom: 2px solid black;
  }

  .rc-radio.rc-option--active {
    background-color: #4e84b5;
  }

  .rc-radio__input {
    appearance: none;
    width: 16px;
    height: 16px;
    border: 2px solid black;
    border-radius: 50%;
    outline: none;
    cursor: pointer;
    position: relative;
  }

  .rc-radio__input:checked::before {
    content: '';
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: #e6af6e;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .rc-radio {
    position: relative;
    font-family: 'Avenir',sans-serif;
    font-weight: 600;
    display: flex;
    align-items: center;
  }
  .rc-template__radio-group .rc-radio .rc-radio__label .rc-option__text {
    order: 1;
  }

  .rc-option__text {
    padding-right: 0;
  }

  .rc_widget__option__label.rc-radio__label {
    margin-left: 20px;
  }

  .rc_widget__option__discount {
    display: none;
  }

  .rc-option__price.rc_widget__price {
    position: absolute;
    right: 0;
  }

  .rc-template__radio-group .rc-radio:not(:first-child) {
    border: none;
  }

  .rc-selling-plans {
    text-transform: uppercase;
    font-family: 'Avenir',sans-serif;
    font-size: 16px;
    font-weight: 600;
    margin-top: 0 !important;
    padding: 14px 8px 14px 20px;
    border-top: none !important;
    border: 2px solid black;
    background: #e6af6e;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .rc_widget__option__plans__dropdown.rc-selling-plans__dropdown {
    color: black !important;
    font-family: 'Avenir',sans-serif;
    font-size: 16px;
    font-weight: 600;
    border: none;
  }

  @media (max-width: 900px) {
    .rc-radio {
      font-size: 14px;
    }
    .rc-selling-plans,
    .rc_widget__option__plans__dropdown.rc-selling-plans__dropdown {
      font-size: 14px;
    }
  }
</style>


