<!-- /snippets/social-sharing.liquid -->
<div class="social-sharing">
  <a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" class="social-sharing__link" onclick="window.open(this.href, 'mywin', 'left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;" aria-label="Share via Twitter" title="Share via Twitter">
    {% render 'icon-twitter' %}</span>
  </a>

  <a target="_blank" href="https://www.linkedin.com/shareArticle?mini=true&url={{ shop.url | append: share_permalink }}&title={{ share_title | url_param_escape }}" class="social-sharing__link" onclick="window.open(this.href, 'mywin', 'left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;" aria-label="Share via LinkedIn" title="Share via LinkedIn">
    {% render 'icon-linkedin' %}
  </a>

  <a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" class="social-sharing__link" onclick="window.open(this.href, 'mywin', 'left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;" aria-label="Share via Facebook" title="Share via Facebook">
    {% render 'icon-facebook' %}</span>
  </a>

  <a target="_blank" href="mailto:?Subject={{share_title | url_param_escape}}&amp;Body={{shop.url | append: share_permalink}}" class="social-sharing__link""onclick="window.open(this.href, 'mywin', 'left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;" aria-label="Share via Email" title="Share via Email">
    {% render 'icon-mail' %}
  </a>
</div>