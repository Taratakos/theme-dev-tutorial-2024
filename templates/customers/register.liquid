<div class="login">
  <div class="login__container">
    <section class="login__create">
      <div class="login__login">
        <h2 class="create__subheader">Create Account</h2>
        <div class="login__form">
          {% form 'create_customer', class: 'login__form' %}
            {{ form.errors | default_errors }}

            <label for="FirstName" class="login__label">
              {{ 'customer.register.first_name' | t }}
            </label>
            <input type="text"
              name="customer[first_name]"
              id="FirstName"
              placeholder="{{ 'customer.register.first_name' | t }}"
              autofocus
              {% if form.first_name %}value="{{ form.first_name }}"{% endif %}
              class="login-form__input">

            <label for="LastName" class="login__label">
              {{ 'customer.register.last_name' | t }}
            </label>
            <input type="text"
              name="customer[last_name]"
              id="LastName"
              placeholder="{{ 'customer.register.last_name' | t }}"
              {% if form.last_name %}value="{{ form.last_name }}"{% endif %}
              class="login-form__input">

            <label for="Email" class="login__label">
              {{ 'customer.register.email' | t }}
            </label>
            <input type="email"
              name="customer[email]"
              id="Email"
              class="login-form__input {% if form.errors contains 'email' %}input-error{% endif %}"
              placeholder="{{ 'customer.register.email' | t }}"
              value="{% if form.email %}{{ form.email }}{% endif %}"
              spellcheck="false"
              autocomplete="off"
              autocapitalize="off">

            <label for="CreatePassword" class="login__label">
              {{ 'customer.register.password' | t }}
            </label>
            <input type="password"
              name="customer[password]"
              id="CreatePassword"
              class="login-form__input {% if form.errors contains 'password' %}input-error{% endif %}"
              placeholder="{{ 'customer.register.password' | t }}">

            <input class="btn--simple btn--offgold login-form__input--submit login-form__input" type="submit" value="{{ 'customer.register.submit' | t }}">
            <div class="login-form__back-container">
              <a href="/account/login" class="login-form__input--return">Back to login</a>
            </div>
          {% endform %}
        </div>
      </div>
    </section>
  </div>
</div>